mixin cardProduct(name, text, price, nameImage)
  article.card-product
    .card-product__image-box
      picture.card-product__image
        source(srcset=`images/products/${nameImage}.avif 1x, images/products/${nameImage}@2x.avif 2x` type='image/avif')
        source(srcset=`images/products/${nameImage}.webp 1x, images/products/${nameImage}@2x.webp 2x` type='image/webp')
        img(src=`images/products/${nameImage}.png` srcset=`images/products/${nameImage}@2x.png 2x` width="230" height="230" alt='' loading="lazy")
    .card-product__content
      .card-product__info
        h3.card-product__title= name
        p.card-product__description= text
      .card-product__footer
        span.card-product__price
          | $ #{price}
        include ../../ui/buttons/button-favorite
