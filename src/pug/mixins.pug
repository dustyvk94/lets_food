//- Предзагрузка шрифта
mixin fontPreload(folder, fullName)
  link(rel="preload" href=`fonts/${folder}/${fullName}.woff2` as="font" type="font/woff2" crossorigin)

//- Вставка svg с спрайта
mixin svgUse(className, idIcon, width, height)
  svg(class=className width=width height=height aria-hidden="true")
    use(xlink:href=`images/sprite.svg${idIcon}`)

//- Вставка favicon
mixin favicon
  link(rel='icon' type='image/png' href='images/favicon/favicon-96x96.png' sizes='96x96')
  link(rel='icon' type='image/svg+xml' href='images/favicon/favicon.svg')
  link(rel='shortcut icon' href='favicon.ico')
  link(rel='apple-touch-icon' sizes='180x180' href='images/favicon/apple-touch-icon.png')
  meta(name='apple-mobile-web-app-title' content='Clerksy')
  link(rel='manifest' href='site.webmanifest')
