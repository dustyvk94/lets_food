include ../mixins

block variables
  - var pageTitle;
  - var pageDescription;

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title= pageTitle
    meta(name="description" content= pageDescription)

    //- Favicon
    +favicon

    //- Preload large files
    link(rel='preload' fetchpriority='high' as='image' href='images/hero/food-1.avif' type='image/avif')
    link(rel='preload' fetchpriority='high' as='image' href='images/hero/food-2.avif' type='image/avif')
    link(rel='preload' fetchpriority='high' as='image' href='images/hero/food-3.avif' type='image/webp')

    //- Preload fonts
    +fontPreload("ReadexPro", "ReadexPro-Regular")
    +fontPreload("ReadexPro", "ReadexPro-SemiBold")

    block styles
      link(rel="stylesheet" href="css/index.css")

    block scripts
      script(src="js/index.bundle.js" defer)

  body.page
    //- Header
    include ../../components/blocks/header/header

    //- Content
    block content

    //- Footer
    include ../../components/blocks/footer/footer
